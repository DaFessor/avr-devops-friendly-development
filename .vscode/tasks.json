{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "IoT: Initialize project (build all in release config)",
            "type": "shell",
            "command": "make",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
        {
            "label": "IoT: Build project (all subprojects)",
            "type": "shell",
            "command": "make ${input:build_config}",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
        {
            "label": "IoT: Clean project (remove all generated files)",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "IoT: Reset project (clean AND remove downloaded files)",
            "type": "shell",
            "command": "make",
            "args": [
                "reset"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "description": "Select the build configuration",
            "id": "build_config",
            "type": "pickString",
            "options": [
                "RELEASE",
                "DEBUG"
            ]
        }
    ]
}