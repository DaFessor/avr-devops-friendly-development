{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build active file",
            "command": "make",
            "type": "shell",
            "args": [
                "compile",
                "${file}"
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build target tests",
            "command": "make",
            "type": "shell",
            "args": [
                "target_tests"
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Run target tests",
            "command": "make",
            "type": "shell",
            "args": [
                "run_target_tests"
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Flash target test",
            "command": "${workspaceFolder}/../scripts/run_avrdude.sh ${input:hex_files}",
            "type": "shell",
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "none"
            }
        }
    ],
    "inputs": [
    {
      "id": "hex_files",
      "type": "command",
      "command": "shellCommand.execute",
      "args": {
          "command": "find ${workspaceFolder}/../build -name '*.hex'",
          "description": "Select the hexfile to flash"
      }
    }
  ]
}