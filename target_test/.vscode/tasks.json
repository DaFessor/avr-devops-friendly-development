{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "1 - Build target tests in release config",
            "command": "make",
            "type": "shell",
            "args": [
                "target_tests"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "clear": true
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "2 - Build target tests in debug config",
            "command": "make",
            "type": "shell",
            "args": [
                "target_tests",
                "CONFIG=DEBUG"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "clear": true
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "3 - Run target tests in release config",
            "dependsOn": [
                "1 - Build target tests in release config"
            ],
            "command": "${workspaceFolder}/../scripts/run_target_test.sh",
            "type": "shell",
            "args": [
                "${input:releaseHexFiles}"
            ],
            "problemMatcher": {
                "owner": "batch",
                "fileLocation" : [
                    "absolute"
                ],
                "pattern" :[
                    {
                        "regexp": "^(.*):(\\d+):(.*):FAIL:(.*)$",
                        "file": 1,
                        "line": 2,
                        "message": 4
                    }
                ]
            },
            "presentation": {
                "reveal": "always",
                "revealProblems": "onProblem",
                "clear": true,
                "panel": "dedicated"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "4 - Run target tests in debug config",
            "dependsOn": [
                "2 - Build target tests in debug config"
            ],
            "command": "${workspaceFolder}/../scripts/run_target_test.sh",
            "type": "shell",
            "args": [
                "${input:debugHexFiles}"
            ],
            "problemMatcher": {
                "owner": "batch",
                "fileLocation" : [
                    "absolute"
                ],
                "pattern" :[
                    {
                        "regexp": "^(.*):(\\d+):(.*):FAIL:(.*)$",
                        "file": 1,
                        "line": 2,
                        "message": 4
                    }
                ]
            },
            "presentation": {
                "reveal": "always",
                "revealProblems": "onProblem",
                "clear": true,
                "panel": "dedicated"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "5 - Clean target tests",
            "command": "make",
            "type": "shell",
            "args": [
                "clean"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            }
        },
    ],
    "inputs": [
        {
            "id": "releaseHexFiles",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "find ${workspaceFolder}/../build/target_test_/release -name '*.hex'",
                "description": "Select the hexfile to flash"
            }
          },
          {
            "id": "debugHexFiles",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "find ${workspaceFolder}/../build/target_test_/debug -name '*.hex'",
                "description": "Select the hexfile to flash"
            }
          }
    ]
}